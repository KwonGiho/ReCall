<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 특별한 서비스\n RE:CALL"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/loginLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/recall_logo"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/inputId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input_form"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@id/loginLogo"
        android:hint="아이디를 입력해 주세요."
        />
    <EditText
        android:id="@+id/inputPwd"
        android:layout_below="@id/inputId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input_form"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="비밀번호를 입력해 주세요."
        />
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:layout_below="@id/inputPwd"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/broadcastBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:text="broadcastBtn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteblur"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/registerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요? "
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerTextView"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>
