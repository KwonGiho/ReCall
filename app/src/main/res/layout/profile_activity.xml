<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="임시이름"
        android:gravity="center_horizontal|center_vertical"
        android:background="#99FEFEFE"
        />
    <ImageView
        android:id="@+id/setting_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/setting"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_below="@id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"

            android:layout_marginLeft="30dp"
            android:src="@drawable/recall_logo"
            android:layout_weight="2"
            android:scaleType="centerInside"
            />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                >
                <TextView
                    android:id="@+id/lifeLogNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="53\n추억"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/markerNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="342\n마커"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/friendNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23\n친구"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/profile_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 편집"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/profile_status"
        android:layout_below="@id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="can't take my eyes off you"/>
    <View
        android:id="@+id/profile_line"
        android:layout_below="@id/profile_status"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#33000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_below="@id/profile_line"
        android:id="@+id/profile_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/showAsThumnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            />
        <ImageView
            android:id="@+id/showAsList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/menu_list"
            />
        <ImageView
            android:id="@+id/showAsLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            />
        <ImageView
            android:id="@+id/showAsFriends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/profile_menu"
        android:id="@+id/profile_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >
    </android.support.v7.widget.RecyclerView>
    <include
        android:id="@+id/profile_activity_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_menu"
        />
</RelativeLayout>
